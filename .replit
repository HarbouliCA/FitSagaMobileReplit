modules = ["flutter", "flutter/3.19.3"]

[nix]
channel = "stable-24_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FlutterApp"

[[workflows.workflow]]
name = "FlutterApp"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "flutter run -d web-server --web-renderer html --web-hostname=0.0.0.0 --web-port=5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "flutter pub get && flutter run -d web-server --web-port 5000 --web-hostname 0.0.0.0"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46263
externalPort = 3000
